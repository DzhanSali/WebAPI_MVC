@model IEnumerable<WebMVC.Models.BookModel_MVC>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<button type="button" class="btn btn-primary" id="addNewButton" onclick="location.href='/BookController_MVC/CreateBook'">Add New</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null){
        foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PageNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditBook", new { bookid = item.Id }) |
                        <button type="button" class="btn btn-primary" id="delete" onclick="deleteBook(@item.Id)">Delete</button>
                </td>
            </tr>
        }
        }
    </tbody>
</table>

<script>
    function deleteBook(bookId) {
        $.ajax({
            url: "http://localhost:5091/api/Books/" + bookId,
            type: "DELETE",
            success: function () {
                window.location.reload(); 
            },
            error: function (xhr, textStatus, errorThrown) {
                alert("Error deleting book: " + errorThrown);
            }
        }
</script>